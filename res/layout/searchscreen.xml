<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:stretchColumns="1"
		android:shrinkColumns="1"
		>
		<TableRow>
			<TextView android:textAppearance="?android:attr/textAppearanceLarge" android:text="Search" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="fill"></TextView>
			
		</TableRow>
		<TableRow>
			<TextView android:text="Name:" />
			<EditText android:id="@+id/search_name" />
		</TableRow>
		<TableRow>
			<TextView android:text="Address:" />
			<EditText android:id="@+id/search_addr" />

		</TableRow>
		<TableRow>
			<TextView android:text="Phone:" />
			<EditText android:id="@+id/search_phone" />
		</TableRow>
		<TableRow>
			<TextView android:text="Homepage:" />
			<EditText android:id="@+id/search_web" />
		</TableRow>
		<EditText android:id="@+id/search_details"
			android:inputType="textMultiLine"
			android:gravity="top"
			android:lines="4"
			android:scrollHorizontally="false"
			android:maxLines="2"
			android:layout_span="2"
			android:hint="Details"
			android:layout_marginTop="4dip"
		/>
	
		<Button android:text="Search!" android:layout_width="wrap_content" android:onClick="GetParams"/>

	</TableLayout>
</ScrollView>